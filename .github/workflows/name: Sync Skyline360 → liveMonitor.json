name: Sync SkyLink360 -> liveMonitor.json

on:
  workflow_dispatch: {}
  schedule:
    - cron: "*/15 * * * *"  # every 15 minutes

permissions:
  contents: write

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout MasterLiveViewing
        uses: actions/checkout@v4

      - name: Ensure jq
        run: |
          sudo apt-get update -y
          sudo apt-get install -y jq

      - name: Get latest Skyline360 commit
        env:
          OWNER: antoniolatham-hue
          REPO: Skyline360
        run: |
          curl -s https://api.github.com/repos/$OWNER/$REPO/commits?per_page=1 > /tmp/commits.json
          SHA=$(jq -r '.[0].sha' /tmp/commits.json)
          MSG=$(jq -r '.[0].commit.message' /tmp/commits.json)
          DATE=$(jq -r '.[0].commit.author.date' /tmp/commits.json)
          URL="https://github.com/$OWNER/$REPO/commit/$SHA"
          jq -n --arg sha "$SHA" --arg msg "$MSG" --arg date "$DATE" --arg url "$URL" \
            '{repo:"Skyline360", sha:$sha, message:$msg, date:$date, url:$url}' > liveMonitor.json

      - name: Commit & push update
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add liveMonitor.json
          git commit -m "chore: update liveMonitor.json from Skyline360" || echo "No changes"
          git push
